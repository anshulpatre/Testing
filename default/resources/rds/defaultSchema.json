{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resources Schema",
  "type": "object",
  "properties": {
    "resources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "service_suffix": {
            "type": "string",
            "default": "rds"
          },
          "subnet_ids": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": ["subnet-989jhj", "subnet-878jh8"]
          },
          "engine_version": {
            "type": "string",
            "default": "15.5"
          },
          "instance_type": {
            "type": "string",
            "default": ""
          },
          "allocated_storage": {
            "type": "integer",
            "default": 10
          },
          "username": {
            "type": "string",
            "default": "admin"
          },
          "password": {
            "type": "string",
            "default": "admin"
          },
          "engine": {
            "type": "string",
            "default": "postgres"
          },
          "storage_type": {
            "type": "string",
            "default": "gp3",
            "enum": ["gp3", "gp2", "none"]
          },
          "port": {
            "type": "integer",
            "default": 5432
          },
          "auto_minor_version_upgrade": {
            "type": "boolean",
            "default": true
          },
          "apply_immediately": {
            "type": "boolean",
            "default": true
          }
        },
        "required": [
          "service_suffix",
          "subnet_ids",
          "engine_version",
          "instance_type",
          "allocated_storage",
          "username",
          "password",
          "engine",
          "storage_type",
          "port",
          "auto_minor_version_upgrade",
          "apply_immediately"
        ]
      }
    }
  },
  "required": ["resources"]
}
